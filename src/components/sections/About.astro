---
import { t } from '../../i18n';

export interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;
---

<section 
  class="about-section" 
  id="about"
  aria-labelledby="about-title"
>
  <div class="container">
    <div class="about-content">
      <div class="about-image scroll-fade-left">
        <div class="image-placeholder">
          <img src="avatar-circle.webp">
        </div>
      </div>
      
      <div class="about-info scroll-fade-right">
        <h1 id="about-title" class="about-name">
          {t('about.name', lang)}
        </h1>
        <h2 class="about-subtitle">
          {t('about.subtitle', lang)}
        </h2>
        <div class="about-description">
          <p>{t('about.description', lang)}</p>
        </div>
        
        <!-- <div class="about-highlights">
          <div class="highlight-item scroll-fade">
            <span class="highlight-number">7+</span>
            <span class="highlight-label">{t('about.yearsExperience', lang)}</span>
          </div>
          <div class="highlight-item scroll-fade">
            <span class="highlight-number">4+</span>
            <span class="highlight-label">{t('about.projectsCompleted', lang)}</span>
          </div>
          <div class="highlight-item scroll-fade">
            <span class="highlight-number">20+</span>
            <span class="highlight-label">{t('about.happyClients', lang)}</span>
          </div>
        </div>
      </div> -->
    </div>
  </div>
</section>

<script>
  import { getTranslation, type Language } from '../../i18n';

  function initAboutSection() {
    // Update content on language change
    window.addEventListener('languageChange', (e: any) => {
      const lang = e.detail;
      const currentTranslations = getTranslation(lang).about
      
      // Update content
      const aboutName = document.getElementById('about-title');
      const aboutSubtitle = document.querySelector('.about-subtitle');
      const aboutDescription = document.querySelector('.about-description p');
      const placeholderText = document.querySelector('.placeholder-text');
      const highlightLabels = document.querySelectorAll('.highlight-label');
      
      if (aboutName) aboutName.textContent = currentTranslations.name;
      if (aboutSubtitle) aboutSubtitle.textContent = currentTranslations.subtitle;
      if (aboutDescription) aboutDescription.textContent = currentTranslations.description;
      if (placeholderText) placeholderText.textContent = currentTranslations.imagePlaceholder;
      
      const labelTexts = [
        currentTranslations.yearsExperience,
        currentTranslations.projectsCompleted,
        currentTranslations.happyClients
      ];
      
      highlightLabels.forEach((label, index) => {
        if (labelTexts[index]) {
          label.textContent = labelTexts[index];
        }
      });
    });
  }
  
  document.addEventListener('DOMContentLoaded', initAboutSection);
</script>

<style>
  .about-section {
    padding: 4rem 0 2.5rem;
    background: var(--color-background);
    min-height: 50vh;
    display: flex;
    align-items: center;
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .about-image {
    display: flex;
    justify-content: center;
  }
  
  .image-placeholder {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    background: var(--color-surface);
    border: 3px solid var(--color-primary);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    color: var(--color-text-muted);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .image-placeholder::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(232, 180, 184, 0.1), rgba(212, 165, 116, 0.1));
    border-radius: 50%;
  }
  
  .placeholder-icon {
    color: var(--color-primary);
    z-index: 1;
  }
  
  .placeholder-text {
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
    z-index: 1;
    margin: 0;
  }
  
  .image-placeholder:hover {
    transform: scale(1.05);
    border-color: var(--color-accent);
  }
  
  .about-info {
    text-align: center;
  }
  
  .about-name {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }
  
  .about-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-primary);
    margin: 0 0 2rem 0;
    line-height: 1.3;
  }
  
  .about-description {
    margin-bottom: 3rem;
  }
  
  .about-description p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .about-highlights {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .highlight-item {
    text-align: center;
    padding: 1.5rem 1rem;
    background: var(--color-surface);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }
  
  .highlight-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px var(--color-shadow);
    border-color: var(--color-primary);
  }
  
  .highlight-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  
  .highlight-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  /* Desktop layout */
  @media (min-width: 768px) {
    .about-content {
      grid-template-columns: 1fr 1.2fr;
      gap: 4rem;
    }
    
    .about-info {
      text-align: left;
    }
    
    .about-description p {
      margin: 0;
    }
    
    .about-highlights {
      margin: 0;
    }
  }
  
  /* Large screens */
  @media (min-width: 1024px) {
    .about-content {
      gap: 5rem;
    }
    
    .image-placeholder {
      width: 320px;
      height: 320px;
    }
    
    .about-name {
      font-size: 3.5rem;
    }
    
    .about-subtitle {
      font-size: 1.75rem;
    }
  }
  
  /* Mobile adjustments */
  @media (max-width: 767px) {
    .about-section {
      padding: 6rem 0 4rem;
    }
    
    .about-name {
      font-size: 2.5rem;
    }
    
    .about-subtitle {
      font-size: 1.25rem;
    }
    
    .about-description p {
      font-size: 1rem;
    }
    
    .about-highlights {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .image-placeholder {
      width: 240px;
      height: 240px;
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .image-placeholder,
    .highlight-item {
      transition: none;
    }
    
    .image-placeholder:hover,
    .highlight-item:hover {
      transform: none;
    }
  }
  
  /* Print styles */
  @media print {
    .about-section {
      padding: 2rem 0;
      min-height: auto;
    }
    
    .highlight-item {
      box-shadow: none;
      border: 1px solid #ccc;
    }
  }
</style>
