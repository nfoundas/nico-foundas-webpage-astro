---
import { t } from '../../i18n';

export interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;
---

<div class="skip-links">
  <a href="#main-content" class="skip-link">
    {t('accessibility.skipToMain', lang)}
  </a>
  <a href="#navigation" class="skip-link">
    {t('accessibility.skipToNav', lang)}
  </a>
</div>

<style>
  .skip-links {
    position: relative;
    z-index: 1000;
  }
</style>
